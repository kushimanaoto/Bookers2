<div class="container">
<h2>User info</h2>
<% if @user.errors.any? %>
    <h3><%= @user.errors.count %> errors prohibited this book from being saved:</h3>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
<%= form_with model:@user, local:true do |f| %>
  <div class="form-group">
  　<label for="user_name">Name</label>
  </div>
  <div class="form-group">
  　<%= f.text_field :name, autofocus: true, placeholder:"名前"%>
  </div>
  <div class="form-group">
  　<label for="user_image">Image</label>
  　<%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
  </div>
  <div class="form-group">
  　<label for="user_introduction">introduction</label>
  </div>
  <div class="form-group">
  　<%= f.text_area :introduction, autofocus: true%>
  </div>
  　<a><%= f.submit "Update User"%></a>
  </div>
<% end %>