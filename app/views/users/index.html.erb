<div class='container px-5 px-sm-0'>
   <div class='row'>
   <div class='col-md-3'>
     <p id="notice"></p>
    <h2>User info</h2>
  <table class='table'>
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  <tbody>
  <tr>
	  <h6><th>name</th> <th><%= @user.name %></th></h6>
  </tr>
  <tr>
	  <h6><th>introduction</th>  <th><%= @user.introduction %></th></h6>
  </tr>
  </tbody>
  </table>

<div class='row'>
  <% if @user.id == current_user.id %>
    <a><%= link_to "", edit_user_path(@user),class: 'btn btn-outline-secondary btn-block fas fa-user-cog' %></a>

  <% end %>
</div>
  <h2 class="mt-3">New book</h2>

  <%= form_with model:@book, local:true do |f| %>
  <label>Title</label>
  <%= f.text_field :title, autofocus: true%>
  <label>Opinion</label>
  <%= f.text_area :body, autofocus: true%>
  <%= f.submit "Create Book", class: 'btn btn-sm btn-success'%>
  <% end %>
    </div>
     <div class='col-md-8 offset-md-1'>
       <p></p>
      <h2>Users</h2>
  <table class='table'>
      <thead><tr>
       <th>image</th>
       <th>name</th>
      </thead></tr>

    <tr>
      <th><%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %></th>
      <th><%= @user.name %></th>
      <th><th>
          <%= link_to "show", user_path(current_user.id) %>
      </th></th>
      </div>
    </tr>

  </table>
    </div>
  </div>