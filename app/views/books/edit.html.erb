<p id="notice"></p>
<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h1>Editing Book</h1>
  	<% if @book.errors.any? %>
    <h3><%= @book.errors.count %> errors prohibited this book from being saved:</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <%= form_with model:@book, local:true do |f| %>
  <div>
  <label>Title</label>
  <%= f.text_field :title, autofocus: true ,class: 'textbox' %>
  </div>
  <div>
  <label>Opinion</label>
  <%= f.text_area :body, autofocus: true ,class: 'textbox'%>
  </div>
  <%= f.submit 'Update Book', class: 'btn btn-sm btn-success'%>
  <% end %>

  <td><%=link_to 'Show', book_path(@book) %></td> |
  <td><%=link_to 'Back',"/books"%></td>

 </div>
  </div>
   </div>