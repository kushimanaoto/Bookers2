<main>
<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
<div class='container px-5 px-sm-0'>
   <div class='row'>
<% if @book.errors.any? %>
    <h3><%= @book.errors.count %> errors prohibited this book from being saved:</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %></div></div></div>
  <div class='container px-5 px-sm-0'>
   <div class='row'>
    <div class='col-md-3'>
    <h2>User info</h2>
  <table class='table'>
  <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %>
  <tbody>
  <tr>
	  <h6><th>name</th> <th><%= @user.name %></th></h6>
  </tr>
  <tr>
	  <h6><th>introduction</th>  <th><%= @user.introduction %></th></h6>
  </tr>
  </tbody>
  </table>

<div class='row'>
    <a><%= link_to "", edit_user_path(@user),class: 'btn btn-outline-secondary btn-block fas fa-user-cog' %></a>
</div>
  <h2 class="mt-3">New book</h2>

  <%= form_with model:@book, local:true do |f| %>
  <label>Title</label>
  <%= f.text_field :title, autofocus: true%>
  <label>Opinion</label>
  <%= f.text_area :body, autofocus: true%>
  <%= f.submit "Create Book" %>
<% end %>
</div>
      <div class='col-md-8 offset-md-1'>
        <h2>Books</h2>
      <table class='table table-hover table-inverse'>
      <thead><tr>
      <th></th>
       <th>Title</th>
       <th>Opinion</th>
      </thead></tr>
    <% @books.each do |book| %>
    <tr>
      <th><%= attachment_image_tag @user, :profile_image, :fill, 30, 30, format: 'jpeg', fallback: "no_image.jpg" %>
      </th>
      <th>
          <%= link_to  book.name , book_path(book) %>
      </th>
      <th><%= book.body %></th>
      </div>
    </tr>
    <% end %>
  </table>
    </div>
    </div>
    </div>
</main>